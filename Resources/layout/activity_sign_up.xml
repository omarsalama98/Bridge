<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="User Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter user name"
            android:id="@+id/UserNamesignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Password:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter password"
            android:password="true"
            android:id="@+id/PasswordsignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Sex:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/sexSpinner"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="First Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter first name"
            android:id="@+id/FirstNamesignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Middle Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter middle name"
            android:id="@+id/MiddleNamesignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Last Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter last name"
            android:id="@+id/LastNamesignUpET"
        />
    </LinearLayout>
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Phone Num:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter Phone Number"
            android:id="@+id/phoneNumsignUpET"
        />
    </LinearLayout>
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Credit Card:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter credit card number"
            android:id="@+id/creditCardNumsignUpET"
        />
    </LinearLayout>
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="CVC:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter credit card cvc"
            android:id="@+id/creditCardCVCsignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth Date:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
        />
        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"    
            android:hint="Enter first name"
            android:id="@+id/birthDatesignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Email:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter Email"
            android:id="@+id/EmailsignUpET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Address:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter Address"
            android:id="@+id/AddressSignUpET"
        />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/curvedbutton"
            android:id="@+id/confirmSignUpBtn"
        />

</LinearLayout>
</ScrollView>
