<?xml version="1.0" encoding="utf-8"?>


<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Password:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter password"
            android:password="true"
            android:id="@+id/PasswordEditingProfileET"
        />
    </LinearLayout>
   
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="First Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter first name"
            android:id="@+id/FirstNameEditingProfileET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Middle Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter middle name"
            android:id="@+id/MiddleNameEditingProfileET"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Last Name:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter last name"
            android:id="@+id/LastNameEditingProfileET"
        />
    </LinearLayout>
        
       
      
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Email:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="bottom"
        />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:hint="Enter Email"
            android:id="@+id/EmailEditingProfileET"
        />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:background="@drawable/curvedbutton"
            android:id="@+id/confirmEditingProfileBtn"
        />

</LinearLayout>
